{
  "files.autoSave": "off",
  "files.insertFinalNewline": true,
  "editor.tabSize": 2,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.cursorWidth": 3,
  "editor.insertSpaces": true,
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 80,
  "editor.renderWhitespace": "all",
  "editor.fontSize": 18,
  "editor.lineHeight": 38,
  "editor.letterSpacing": 0.5,
  "editor.fontLigatures": true,
  "editor.fontWeight": "400",
  "editor.minimap.enabled": true,
  "editor.mouseWheelZoom": true,
  "editor.tabCompletion": "on",
  "editor.formatOnSave": false,
  "editor.formatOnPaste": true,
  "workbench.startupEditor": "newUntitledFile",
  "telemetry.enableCrashReporter": false,
  "html.format.wrapLineLength": 80,
  "terminal.integrated.shell.linux": "/bin/zsh",
  "editor.fontFamily": "'SF Mono','FiraMono Nerd Font Mono','Hack','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "workbench.colorTheme": "Nord",
  "extensions.ignoreRecommendations": true,
  "editor.suggestSelection": "first",
  "workbench.iconTheme": "eq-material-theme-icons-darker",
  "bracket-pair-colorizer-2.colors": ["Gold", "Orchid", "LightSkyBlue", "Blue"],
  "editor.renderControlCharacters": true,
  "javascript.validate.enable": false,
  "standard.autoFixOnSave": false, // standardjs
  "standard.validate": ["javascript", "javascriptreact", "html"], // Files to validate with Standard JS
  "standard.usePackageJson": true,
  "vscode-erb-beautify.keepBlankLines": 1,
  // "solargraph.autoformat": true,
  // "solargraph.diagnostics": true,
  // "solargraph.formatting": true,
  // "ruby.useBundler": true, //run non-lint commands with bundle exec
  "ruby.useLanguageServer": true, // use the internal language server (see below)
  "ruby.format": "standard",
  "ruby.lintDebounceTime": 1500,
  "ruby.lint": {
    "standard": true
  },
  "emmet.includeLanguages": {
    "erb": "html"
  },
  "files.associations": {
    // "*.html.erb": "html",
    // "*.erb": "html"
      "*.js": "javascriptreact"
  },
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/tmp": true,
    "**/vendor": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "solargraph.transport": "external",
  "solargraph.externalServer": {
    "host": "localhost",
    "port": 7658
  },
  "gitlens.currentLine.format": "${author}, ${agoOrDate} ",
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true
  },
  "debug.internalConsoleOptions": "neverOpen",
  "java.configuration.checkProjectSettingsExclusions": false,
  "launch": {
    // ln -nfs /home/edebole/.rbenv/shims/rdebug-ide /usr/local/bin/
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Rails server",
        "type": "Ruby",
        "request": "launch",
        "cwd": "${workspaceRoot}",
        "program": "${workspaceRoot}/bin/rails",
        "args": ["server"]
      },
      {
        "name": "Dashboard server",
        "type": "Ruby",
        "request": "launch",
        "cwd": "${workspaceRoot}",
        // "showDebuggerOutput": true,
        "program": "/home/edebole/.gem/ruby/2.5.1/bin/bundle",
        "args": ["exec", "rackup", "web.ru"],
        "env": {
          "GEM_PATH": "/home/edebole/.gem/ruby/2.5.1"
        }
      },
      {
        "name": "Device api",
        "type": "Ruby",
        "request": "launch",
        "cwd": "${workspaceRoot}",
        // "showDebuggerOutput": true,
        "program": "/home/edebole/.gem/ruby/2.5.1/bin/bundle",
        "args": ["exec", "rackup", "-p", "9090", "devices_api.ru"],
        "env": {
          "GEM_PATH": "/home/edebole/.gem/ruby/2.5.1"
        }
      }
    ]
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "sync.gist": "2c8242a9580f8122a309e3b1c6f02686",
  "[javascriptreact]": {
    "editor.defaultFormatter": "standard.vscode-standard"
  },
  "redhat.telemetry.enabled": true,
  "projectManager.git.baseFolders": [
    "/home/edebole/sinaptia",
    "/home/edebole/git"
  ],
  "explorer.confirmDragAndDrop": false,
  "workbench.colorCustomizations": {
    "editor.selectionBackground": "#135564",
    "editor.selectionHighlightBackground": "#135564"
  },
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.defaultDateLocale": null,
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.scrollable": false,
  "projectManager.any.baseFolders": [
    "/home/edebole/sinaptia",
    "/home/edebole/git"
  ],
  "projectManager.any.maxDepthRecursion": 2,
  "projectManager.git.maxDepthRecursion": 2,
  "projectManager.hg.maxDepthRecursion": 2,
  "editor.inlineSuggest.enabled": true,
  "bracket-pair-colorizer-2.highlightActiveScope": true,
  "standard.treatErrorsAsWarnings": true,
  "merge-conflict.autoNavigateNextConflict.enabled": true,
  "window.zoomLevel": 1,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.minimap.autohide": true,
  "editor.stickyScroll.enabled": true,
  "window.menuBarVisibility": "toggle",
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": true,
    "markdown": false
  }
}
